@page "/project-dashboard"

<div class="dashboard-container">
    <h2>Project Management</h2>
    <div class="header-bar"></div>
    <h3>@currentSectionTitle</h3>

    <!-- Section Selector -->
    <div class="project-options">
        <button class="project-button" @onclick="ShowCurrentProjects">Current Projects</button>
        <button class="project-button" @onclick="ShowFutureProjects">Future Projects</button>
        <button class="project-button" @onclick="ShowCompletedProjects">Completed Projects</button>
        <button class="project-button">Calendar</button>
    </div>

    <!-- Dynamic Content for Each Section -->
    <div class="project-section">
        <div class="project-list">
            <div class="project-item selected">Project</div>
            <div class="project-details">
                <p><strong>Project Description:</strong></p>
                <p><strong>Requirements:</strong></p>
                <p><strong>Owner:</strong></p>
                <p><strong>Users:</strong></p>
                <p><strong>Access Level:</strong></p>
                <p><strong>Progress Report:</strong></p>
                <p><strong>Is Completed? Y/N ___</strong></p>
            </div>
        </div>
        <div class="project-notes">
            <p><strong>Notes:</strong></p>
            <textarea rows="15" cols="50"></textarea>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="action-button">Back</button>
        <button class="action-button">Export</button>
        <button class="action-button">Cancel</button>
        <button class="action-button">Save</button>
    </div>

    <button class="sign-out-button">Sign Out</button>
</div>

@code {
    private string currentSectionTitle = "Current Projects";

    private void ShowCurrentProjects()
    {
        currentSectionTitle = "Current Projects";
    }

    private void ShowFutureProjects()
    {
        currentSectionTitle = "Future Projects";
    }

    private void ShowCompletedProjects()
    {
        currentSectionTitle = "Completed Projects";
    }
}

<style>
    /* General Page Styling */
    body {
        background-color: #f4d7b2;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .dashboard-container {
        text-align: center;
        background-color: #f4d7b2;
        padding: 20px;
        width: 500px;
        border: 2px solid #1d67a8;
        border-radius: 8px;
    }

    h2 {
        font-size: 28px;
        color: #333;
        margin-bottom: 10px;
    }

    .header-bar {
        background-color: #e46356;
        height: 20px;
        width: 100%;
        margin: 10px 0;
    }

    h3 {
        font-size: 24px;
        color: #e46356;
        margin-bottom: 20px;
    }

    /* Section Selector Buttons */
    .project-options {
        display: flex;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    .project-button {
        width: 100px;
        height: 100px;
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .project-button:hover {
            background-color: #56a5b2;
        }

    /* Project Section Styling */
    .project-section {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .project-list {
        width: 40%;
        text-align: left;
    }

    .project-item {
        padding: 10px;
        background-color: #e46356;
        color: #fff;
        margin-bottom: 5px;
    }

    .project-details {
        margin-top: 10px;
        color: #333;
    }

    .project-notes {
        width: 55%;
        text-align: left;
    }

        .project-notes textarea {
            width: 100%;
            resize: none;
        }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .action-button {
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .action-button:hover {
            background-color: #56a5b2;
        }

    .sign-out-button {
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
    }

        .sign-out-button:hover {
            background-color: #56a5b2;
        }
</style>

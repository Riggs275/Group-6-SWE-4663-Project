@page "/project-dashboard"

<div class="dashboard-container">
    <h2>Project Management</h2>
    <div class="header-bar"></div>
    <h3>Dashboard</h3>

    <div class="project-options">
        <button class="project-button">Projects in Progress</button>
        <button class="project-button">Future Projects</button>
        <button class="project-button">Past Projects</button>
        <button class="project-button">Calendar</button>
    </div>

    <button class="sign-out-button">Sign Out</button>
</div>

<style>
    body {
        background-color: #f4d7b2;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .dashboard-container {
        text-align: center;
        background-color: #f4d7b2;
        padding: 20px;
        width: 500px;
        border: 2px solid #1d67a8;
        border-radius: 8px;
    }

    h2 {
        font-size: 28px;
        color: #333;
        margin-bottom: 10px;
    }

    .header-bar {
        background-color: #e46356;
        height: 20px;
        width: 100%;
        margin: 10px 0;
    }

    h3 {
        font-size: 24px;
        color: #e46356;
        margin-bottom: 20px;
    }

    .project-options {
        display: flex;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    .project-button {
        width: 100px;
        height: 100px;
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .project-button:hover {
            background-color: #56a5b2;
        }

    .sign-out-button {
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .sign-out-button:hover {
            background-color: #56a5b2;
        }
</style>
<h3>ProjectDashboard</h3>


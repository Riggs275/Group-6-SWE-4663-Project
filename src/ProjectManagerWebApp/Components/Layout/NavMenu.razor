@inherits LayoutComponentBase

<div class="main-layout">
    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <h2>Navigation</h2>
        <ul>
            <!-- Home Link -->
            <li>
                <NavLink href="" class="nav-link" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                </NavLink>
            </li>

            <!-- Counter Link -->
            <li>
                <NavLink href="counter" class="nav-link">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Counter
                </NavLink>
            </li>

            <!-- Weather Link -->
            <li>
                <NavLink href="weather" class="nav-link">
                    <span class="bi bi-cloud-sun" aria-hidden="true"></span> Weather
                </NavLink>
            </li>
        </ul>
    </nav>

    <!-- Main Content Area -->
    <div class="content">
        @Body
    </div>
</div>

<style>
    .main-layout {
        display: flex;
        height: 100vh;
        background-color: #f4f4f4; /* Background for the whole layout */
    }

    .sidebar {
        width: 250px;
        background-color: #f4d7b2;
        padding: 20px;
        box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
    }

        .sidebar h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar li {
            margin: 10px 0;
        }

    .nav-link {
        text-decoration: none;
        color: #333;
        font-size: 18px;
        padding: 10px;
        display: block;
        border-radius: 4px;
        background-color: #63c2d0;
        color: white;
        text-align: center;
    }

        .nav-link:hover {
            background-color: #56a5b2;
        }

    .content {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
    }
</style>

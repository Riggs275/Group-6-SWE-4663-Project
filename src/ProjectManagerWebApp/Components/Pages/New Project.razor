@using ProjectManagerLogic
@page "/New-Projects"
@rendermode InteractiveServer
@{
}


<h3>Current Projects</h3>
<div class="project-section">
    <div class="project-list">
        <div class="project-item selected">@projectId</div>
        <div class="project-details">
            <p><strong>Project Description:</strong><textarea rows="1" cols=" 50"></textarea></p>
            <p><strong>Requirements:</strong></p>
            <p><strong>Owner:</strong><textarea rows="1" cols=" 50"></textarea></p>
            <p><strong>Users:</strong></p>
            <p><strong>Access Level:</strong></p>
            <p><strong>Progress Report:</strong></p>
            <p><strong>Is Completed? Y/N ___</strong><textarea rows="1" cols=" 1"></textarea></p>
        </div>
    </div>
    <div class="project-notes">
        <p><strong>Notes:</strong></p>
        <textarea rows="15" cols="50"></textarea>
    </div>
    <div class="action-buttons">
        <button class="action-button">Back</button>
        <button class="action-button">Export</button>
        <button @onclick="_=>ChangeNow()">Import</button>
        <button class="action-button">Cancel</button>
        <button class="action-button">Save</button>
    </div>
</div>

<style>
    /* Reuse the styling from the previous components */
</style>
@code {

    string projectId = "Project: ";
    string description = "Description: ";

    DataManager _dataManager = new DataManager();

    public void ChangeNow()
    {
        projectId = "Hello";
        description = "Project Description: Try Something.";
    }



}
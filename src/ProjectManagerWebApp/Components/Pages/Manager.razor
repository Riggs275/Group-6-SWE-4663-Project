@page "/manager"
@using ProjectManagerLogic
@using Task = System.Threading.Tasks.Task
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h1>Manager Access</h1>

<div class="manager-container">
    <div class="header">Manager Access</div>
    <div class="button-container">
        <button class="project-button"><NavLink href="Project-Dashboard">Projects</NavLink></button>
        <button class="project-button"><NavLink href="Calendar">Calendar</NavLink></button>
        
        <button class="action-button small">Search Roles / Assign Roles</button>
    </div>
    <button class="sign-out-button"><NavLink href="Home">Sign Out</NavLink></button>
</div>

<style>
    .manager-container {
        background-color: #f4d4a6;
        padding: 20px;
        width: 100%;
        height: 100vh;
        margin: 0;
        text-align: center;
    }

    .header {
        font-size: 24px;
        margin-bottom: 20px;
        background-color: #d16969;
        color: white;
        padding: 5px;
    }

    .button-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .action-button {
        background-color: #87ceeb;
        border: none;
        padding: 15px 20px;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
        min-width: 120px;
    }

        .action-button.small {
            font-size: 14px;
            padding: 10px;
        }

        .action-button:hover {
            background-color: #5fa7c3;
        }

    .logout-button {
        background-color: #87ceeb;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
        margin-top: 20px;
    }

        .logout-button:hover {
            background-color: #5fa7c3;
        }
</style>

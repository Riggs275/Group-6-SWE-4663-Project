@page "/project-lists"
@using ProjectManagerLogic
@using Task = System.Threading.Tasks.Task
@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="project-list-container">
    <h2>Projects</h2>
    <div class="header-bar"></div>
    <h3>Project List</h3>

    <div class="project-list">
        <div class="project-item">
            <div class="project-info">
                <h4>Project 1</h4>
                <p>Owner: John Doe</p>
                <p>Status: In Progress</p>
            </div>
            <div class="project-actions">
                <button class="action-button">View</button>
                <button class="action-button">Edit</button>
            </div>
        </div>

        <div class="project-item">
            <div class="project-info">
                <h4>Project 2</h4>
                <p>Owner: Jane Smith</p>
                <p>Status: Completed</p>
            </div>
            <div class="project-actions">
                <button class="action-button">View</button>
                <button class="action-button">Edit</button>
            </div>
        </div>

        <!-- Additional project items can go here -->
    </div>
</div>

<style>
    body {
        background-color: #f4d7b2;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .project-list-container {
        text-align: center;
        background-color: #f4d7b2;
        padding: 20px;
        width: 100%;
        height: 100%;
    }

    h2 {
        font-size: 28px;
        color: #333;
        margin-bottom: 10px;
    }

    .header-bar {
        background-color: #e46356;
        height: 20px;
        width: 100%;
        margin: 10px 0;
    }

    h3 {
        font-size: 24px;
        color: #e46356;
        margin-bottom: 20px;
    }

    .project-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    .project-item {
        width: 80%;
        max-width: 600px;
        background-color: #fff;
        padding: 15px;
        border: 2px solid #63c2d0;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .project-info h4 {
        font-size: 20px;
        color: #333;
        margin: 0;
    }

    .project-info p {
        font-size: 14px;
        color: #555;
        margin: 5px 0;
    }

    .project-actions {
        display: flex;
        gap: 10px;
    }

    .action-button {
        background-color: #63c2d0;
        color: white;
        font-size: 14px;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .action-button:hover {
            background-color: #56a5b2;
        }
</style>
